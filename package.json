{
    "name": "jsloth",
    "version": "0.0.5",
    "author": {
        "name": "Chriss Mejia",
        "email": "me@chrissmejia.com",
        "url": "https://chrissmejia.com/"
    },
    "scripts": {
        "preinstall": "npm install -g typescript && npm install -g ts-node && npm install -g nodemon",
        "start": "nodemon --watch source --ignore */*.spec.ts --exec ts-node source/server.ts",
        "test": "mocha --reporter spec --report lcovonly --compilers ts:ts-node/register tests/**/*.test.ts",
        "typedoc": "typedoc --out ./docs/typedoc/ ./source/",
        "travis": "mocha --reporter spec --report lcovonly --compilers ts:ts-node/register tests/**/*.test.ts",
        "cover": "istanbul cover --no-default-excludes --hook-run-in-context ./node_modules/mocha/bin/_mocha -- -R spec tests/core/**/*.test.ts --report lcovonly --compilers ts:ts-node/register"
    },
    "bugs": {
        "url": "https://github.com/chrissmejia/JSloth/issues",
        "email": "me@chrissmejia.com"
    },
    "license": "(MIT OR Apache-2.0)",
    "dependencies": {
        "@types/jsonwebtoken": "^7.2.1",
        "@types/mysql": "0.0.31",
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.18.2",
        "bootstrap": "^4.0.0-beta.2",
        "cli-color": "^1.2.0",
        "es6-promise": "^4.1.0",
        "express": "^4.16.2",
        "jsonwebtoken": "^7.4.3",
        "morgan": "^1.9.0",
        "mysql": "^2.15.0",
        "node-sass": "^4.6.1",
        "ts-node": "^3.0.4",
        "typescript": "^2.6.1"
    },
    "devDependencies": {
        "@types/body-parser": "0.0.33",
        "@types/chai": "^3.4.34",
        "@types/chai-http": "0.0.29",
        "@types/cli-color": "^0.3.29",
        "@types/express": "^4.0.39",
        "@types/mocha": "^2.2.44",
        "@types/morgan": "^1.7.35",
        "chai": "^3.5.0",
        "chai-http": "^3.0.0",
        "coveralls": "^2.13.3",
        "grunt": "^1.0.1",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-watch": "^1.0.0",
        "grunt-ts": "^6.0.0-beta.17",
        "grunt-tslint": "^4.0.0",
        "istanbul": "^0.4.5",
        "jscoverage": "^0.6.0",
        "mocha": "^3.5.3",
        "mocha-lcov-reporter": "^1.2.0",
        "tslint": "^4.2.0",
        "typedoc": "^0.9.0"
    }
}
